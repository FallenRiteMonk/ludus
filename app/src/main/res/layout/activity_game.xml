<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".GameActivity"
    android:orientation="vertical" >

        <GridView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fieldGrid"
            android:numColumns="9"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addFields"
            android:layout_width="@dimen/addFields_button_diameter"
            android:layout_height="@dimen/addFields_button_diameter"
            android:src="@android:drawable/ic_input_add"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:tint="@android:color/white"
            android:visibility="gone" />
</RelativeLayout>
