<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    tools:context="com.fallenritemonk.numbers.MainMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <Button
        android:id="@+id/menu_button_classic_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/classic_game"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/menu_button_random_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/random_game"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/menu_button_resume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resume"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
