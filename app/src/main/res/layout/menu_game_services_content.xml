<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_services_sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/sign_in"
        android:background="@color/dark_gray"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/game_services_achievements"
        android:layout_below="@+id/game_services_sign_in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/achievements"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dip"
        android:visibility="gone"
        android:background="@color/dark_gray" />

    <TextView
        android:id="@+id/game_services_leaderboards"
        android:layout_below="@+id/game_services_achievements"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/leaderboards"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dip"
        android:visibility="gone"
        android:background="@color/dark_gray" />

    <TextView
        android:id="@+id/game_services_sign_out"
        android:layout_below="@+id/game_services_leaderboards"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/sign_out"
        android:textColor="@android:color/white"
        android:layout_marginTop="1dip"
        android:visibility="gone"
        android:background="@color/dark_gray" />
</RelativeLayout>